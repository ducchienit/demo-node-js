extends ../layouts/common
block content
    h1 Users

    .d-flex.align-items-center
        form(action="/users/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control") 
            button(type="", class="btn btn-primary ml-2") Search

    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Action
        each user in users
            tr
                td
                    img(src=user.avatar, height="80px;", width="100px", style="border-radius: 50%;")
                td= user.name
                td= user.phone
                td    
                    a.btn.btn-warning(href='/users/' + user.id) 
                        svg.bi.bi-eye-fill(width='1em', height='1em', viewbox='0 0 16 16', fill='currentColor', xmlns='http://www.w3.org/2000/svg')
                            path(d='M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z')
                            path(fill-rule='evenodd', d='M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z')

    a.btn.btn-success(href="/users/create") Create user    